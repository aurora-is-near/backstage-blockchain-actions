{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "github", "jest"],
  "rules": {
    "import/no-namespace": "off",
    "camelcase": "off",
    "i18n-text/no-en": "off"
  },
  "ignorePatterns": ["scripts", "dist"],
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
