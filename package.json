{
  "name": "backstage-blockchain-actions",
  "version": "1.0.6",
  "description": "Backstage workflows for Github Actions",
  "main": "src/main.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint .",
    "type-check": "tsc",
    "clean": "rm -rf dist",
    "build": "pnpm clean && ncc build --source-map --license licenses.txt && cp action.yml dist",
    "ci:version": "node ./scripts/bump.js",
    "ci:publish": "node ./scripts/release.js",
    "gen:coverage-badge": "make-coverage-badge --output-path badges/coverage.svg"
  },
  "keywords": [
    "backstage",
    "blockchain",
    "actions",
    "github",
    "datadog"
  ],
  "author": "Aurora Security <security@aurora.dev>",
  "license": "CC0-1.0",
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.6",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.4.2",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@backstage/catalog-client": "^1.4.4",
    "@backstage/catalog-model": "^1.4.2",
    "@backstage/types": "^1.1.1",
    "@datadog/datadog-api-client": "^1.17.0",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "simple-git": "^3.20.0"
  }
}
